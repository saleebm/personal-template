{
  "permissions": {
    "allow": [
      "Agent",
      "Bash(bun:*)",
      "FileRead(*)",
      "LS",
      "Grep",
      "Glob"
    ],
    "ask": [
      "Bash(git reset:*)",
      "Bash(git checkout:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(curl:*)",
      "Read(./.env)",
      "Read(`**/*/.env.*)`",
      "WebFetch"
    ],
    "additionalDirectories": [
      "~/workspaces/me/copt-dev-v1",
      "~/workspaces/me/lesswhelmed-me",
      "~/workspaces/business/ai-doctore",
      "~/workspaces/business/scratch/ai-dr"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "filesystem",
    "context7",
    "sequential-thinking",
    "browserbase",
    "playwright",
    "npm-search",
    "stagehand",
    "shadcn"
  ],
  "disabledMcpjsonServers": [
    "Deep Graph MCP",
    "taskmaster-ai"
  ],
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-enhanced.sh"
  },
  "outputStyle": "AI Dr. Workflow Style",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/prompt-storage-hook.sh"
          }
        ]
      }
    ]
  }
}