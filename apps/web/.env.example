# Next.js Application Environment Variables
# Copy this file to .env for local development

# Database
# Database Configuration
DB_HOST=localhost
DB_USER=
DB_PASSWORD=
DB_NAME=
DB_PORT=5432
# Use variable interpolation for maintainability
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# API Keys for MCP Servers
GEMINI_API_KEY=$GEMINI_API_KEY # Set from local machine
GITHUB_TOKEN=$GITHUB_TOKEN # Set from local machine

# Optional: Development Settings
NODE_ENV=development