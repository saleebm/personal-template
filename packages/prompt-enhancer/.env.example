# Prompt Enhancer Environment Configuration
# Copy this file to .env and fill in your API keys

# Google Gemini API (Currently used - REQUIRED)
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=$GEMINI_API_KEY

# Anthropic Claude API (Optional fallback - Claude 4 models available)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=$ANTHROPIC_API_KEY

# OpenAI API (Future support)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=$OPENAI_API_KEY

# Configuration Options
PROMPT_ENHANCER_DEBUG=false
PROMPT_ENHANCER_LOG_LEVEL=error
PROMPT_ENHANCER_OUTPUT_DIR=.prompts
PROMPT_ENHANCER_MAX_TOKENS=4000
PROMPT_ENHANCER_ENABLE_CACHE=true
PROMPT_ENHANCER_CACHE_TTL=3600

# Model Selection (when multiple providers work)
# Options: gemini-2.5-pro, gemini-2.5-flash, claude-opus-4-1-20250805, claude-sonnet-4-20250514, gpt-4-turbo
PROMPT_ENHANCER_MODEL=gemini-2.5-pro

# Rate Limiting
PROMPT_ENHANCER_RATE_LIMIT=10
PROMPT_ENHANCER_RATE_WINDOW=60

# Storage Configuration
PROMPT_ENHANCER_STORAGE_TYPE=filesystem
PROMPT_ENHANCER_STORAGE_PATH=.prompts

# Feature Flags
PROMPT_ENHANCER_ENABLE_WORKFLOW=true
PROMPT_ENHANCER_ENABLE_AGENTS=true
PROMPT_ENHANCER_ENABLE_CONTEXT=true
PROMPT_ENHANCER_ENABLE_TEMPLATES=false