{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "db:generate": {
      "cache": false,
      "inputs": [
        "prisma/schema.prisma"
      ]
    },
    "build": {
      "dependsOn": [
        "^build",
        "db:generate"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "generated/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint",
        "db:generate"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "^typecheck",
        "db:generate"
      ]
    },
    "test": {
      "dependsOn": [
        "^test",
        "db:generate"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}